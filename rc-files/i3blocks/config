[freedisk]
command=df -h /dev/sda2 | awk '{print $4}' |tail -1
label=hdd
interval=20

[kernel]
command=uname -r
interval=once
color=#666666

[time]
label=h
interval=5
command=date +%T

[weather]
label=wt
command=~/.config/i3blocks/weather.sh "Dortmund" | awk '{print $2}' 
interval=900
color=#666666


