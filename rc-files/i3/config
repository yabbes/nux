# font
font pango:Monaco 10
# Background
exec feh --randomize --bg-scale ~/Bilder/*
bindsym $mod+Shift+b exec feh --randomize --bg-scale ~/Bilder/*

#  Audio controls
bindsym XF86AudioRaiseVolume exec amixer set Master 3+ #increase sound volume
bindsym XF86AudioLowerVolume exec amixer set Master 3- #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# mpd / mpc bindings
bindsym XF86AudioNext exec mpc next
bindsym XF86AudioPrev exec mpc prev
bindsym XF86AudioStop exec mpc pause
bindsym XF86AudioPlay exec mpc play

# Sreen brightness controls
# check that brightness files are writeable
bindsym XF86MonBrightnessDown exec brightlight -d 100 # decrease screen brightness
bindsym XF86MonBrightnessUp exec brightlight -i 100 # increase screen brightness

bindsym $mod+Escape exec "pm-suspend"
exec /usr/bin/i3 -V -d all >~/i3log-$(date +'%F-%k-%M-%S') 2>&1

# scrot keybinding
bindsym --release $mod+Shift+s exec scrot -s 
bindsym --release $mod+Shift+a exec scrot

# i3 gaps
gaps outer 10
gaps inner 10

# switch to next and prev workspace
bindsym $mod+x workspace prev
bindsym $mod+c workspace next

# start file managers
bindsym $alt+c exec caja
bindsym $alt+r exec urxvt -e ranger

# bind browsers
bindsym $alt+f exec firefox
bindsym $alt+i exec firefox -private
bindsym $alt-q exec qutebrowser

# i3lock
bindsym $mod+Shift+Escape exec i3lock -i ~/.i3/i3lock.png
