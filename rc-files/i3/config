        urgent_workspace #F5F5FF #b21a3b
        active_workspace #E5E5E5 #5697B2
        inactive_workspace #E5E5E5 #$turkis
        focused_workspace #E5E5E5 #BC9B54

    }
    status_command i3blocks
    height 25
}


